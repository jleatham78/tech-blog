<ol class="post-list">
  {{#each posts as |post|}}
  <li>
    <article class="post">
  <div class="title">
    <a href="/post/{{id}}" target="_blank">{{title}}</a>
    <p>{{user.username}} on {{format_date created_at}}</p>
  </div>
  <div class="meta">
  <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
</div>
</article>
  </li>
  {{/each}}
</ol>